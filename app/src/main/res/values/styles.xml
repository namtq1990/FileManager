<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="popupTheme">@style/PopupToolbarStyle</item>
        <item name="actionBarPopupTheme">@style/PopupToolbarStyle</item>
    </style>
    
    <style name="PopupToolbarStyle">
        <item name="android:colorBackground">?colorPrimaryDark</item>
    </style>

</resources>
