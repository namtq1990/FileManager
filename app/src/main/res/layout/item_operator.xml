<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File: "/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/layout_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4">

        <ProgressBar
            android:id="@+id/prog_execute"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            tools:progress="50"
            />

        <TextView
            android:id="@+id/tv_progress"
            android:gravity="start"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            tools:text="50%"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_info"
            android:layout_width="@dimen/tiny_button_size"
            android:layout_height="@dimen/tiny_button_size"
            android:layout_marginBottom="@dimen/padding_small_02"
            android:layout_marginEnd="@dimen/padding_small_02"
            android:layout_marginStart="@dimen/padding_small_02"
            android:background="@drawable/state_round_btn"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_about"
            app:backgroundTint="@color/gray"
            app:backgroundTintMode="multiply"
            app:elevation="0dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="0"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/tiny_button_size"
            android:layout_height="@dimen/tiny_button_size"
            android:layout_marginBottom="@dimen/padding_small_02"
            android:layout_marginEnd="@dimen/padding_small_02"
            android:layout_marginStart="@dimen/padding_small_02"
            android:background="@drawable/state_round_btn"
            android:padding="@dimen/padding_small_02"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_cancel"
            app:backgroundTint="@color/gray"
            app:backgroundTintMode="multiply"
            app:elevation="0dp"
            app:layout_gravity="center"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_pause"
            android:layout_width="@dimen/tiny_button_size"
            android:layout_height="@dimen/tiny_button_size"
            android:layout_marginEnd="@dimen/padding_small_02"
            android:layout_marginStart="@dimen/padding_small_02"
            android:background="@drawable/state_round_btn"
            android:padding="@dimen/padding_small_02"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_pause"
            app:backgroundTint="@color/gray"
            app:backgroundTintMode="multiply"
            app:elevation="0dp"
            app:fabSize="mini"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_restart"
            android:layout_width="@dimen/tiny_button_size"
            android:layout_height="@dimen/tiny_button_size"
            android:layout_marginEnd="@dimen/padding_small_02"
            android:layout_marginStart="@dimen/padding_small_02"
            android:background="@drawable/state_round_btn"
            android:padding="@dimen/padding_small_02"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_refresh"
            app:backgroundTint="@color/gray"
            app:backgroundTintMode="multiply"
            app:elevation="0dp"
            app:fabSize="mini"
            app:layout_gravity="center"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_undo"
            android:layout_width="@dimen/tiny_button_size"
            android:layout_height="@dimen/tiny_button_size"
            android:layout_marginEnd="@dimen/padding_small_02"
            android:layout_marginStart="@dimen/padding_small_02"
            android:background="@drawable/state_round_btn"
            android:padding="@dimen/padding_small_02"
            android:scaleType="centerInside"
            android:src="@drawable/ic_undo"
            app:backgroundTint="@color/gray"
            app:backgroundTintMode="multiply"
            app:elevation="0dp"
            app:fabSize="mini"
            />

        <android.support.v4.widget.Space
            android:id="@+id/space"
            android:layout_width="@dimen/tiny_button_size"
            android:layout_height="@dimen/tiny_button_size"
            android:layout_marginEnd="@dimen/padding_small_02"
            android:layout_marginStart="@dimen/padding_small_02"/>

        <!--<android.support.v4.widget.Space-->
            <!--android:id="@+id/space_2"-->
            <!--android:visibility="gone"-->
            <!--android:layout_width="@dimen/tiny_button_size"-->
            <!--android:layout_height="@dimen/tiny_button_size"-->
            <!--android:layout_marginEnd="@dimen/padding_small_02"-->
            <!--android:layout_marginStart="@dimen/padding_small_02"/>-->

    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textIsSelectable="true"
        tools:text="From /Sdcard"/>

    <TextView
        android:id="@+id/tv_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        tools:text="To /Sdcard/Movie"/>

</LinearLayout>